<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/dialog_add_key_due_rsa"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/service_name_label"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/RSAserviceNameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/service_name_hint"
        android:inputType="text" />

    <Button
        android:id="@+id/RSAcopyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/copy_public_key"
        app:icon="?attr/actionModeCopyDrawable" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/encrypted_key_label"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/RSAkeyInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/encrypted_key_hint"
        android:inputType="text" />

    <Button
        android:id="@+id/RSAdecryptButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/decrypt_and_save_key"
        app:icon="@android:drawable/ic_lock_idle_lock" />
</LinearLayout>
